<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iems5722.translateapp.MainActivity" >

    <TextView
        android:id="@+id/lbl_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_guide" />

    <EditText
        android:id="@+id/txt_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_guide"
        android:imeOptions="actionDone"
        android:hint="@string/hint"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_input"
        android:text="@string/btn_submit" />

    <TextView
        android:id="@+id/lbl_translated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_submit"
        android:layout_alignParentLeft="true"
        android:text="@string/translated" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_submit"
        android:layout_toRightOf="@id/lbl_translated"
        android:layout_marginLeft="@dimen/activity_widget_margin"
        android:textIsSelectable="true" />

</RelativeLayout>